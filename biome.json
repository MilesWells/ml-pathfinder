{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			".vscode/*",
			"src/**/*",
			"biome.json",
			"eslint.config.mjs",
			"next.config.ts",
			"package.json",
			"postcss.config.cjs",
			"tsconfig.json"
		]
	},
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"linter": {
		"domains": {
			"next": "recommended",
			"react": "recommended"
		},
		"rules": {
			"performance": {
				"noImgElement": "off"
			}
		}
	}
}
